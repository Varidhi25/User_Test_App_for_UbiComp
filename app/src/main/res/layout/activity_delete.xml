<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    tools:context=".Delete">
    <TextView
        android:id="@+id/deleteBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:layout_marginTop="55dp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/amaranth"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Fill the information"
        android:textSize="25sp"
        android:fontFamily="@font/amaranth"
        android:textColor="@android:color/white"
        android:layout_margin="50dp"/>
    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="180dp"
        android:paddingTop="10dp"
        android:orientation="vertical"
        app:errorEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/delete_itemName"
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:hint="Name of the object"
            android:textColorHint="@android:color/white"
            android:inputType="text"
            android:textColor="@android:color/white"
            />
    </android.support.design.widget.TextInputLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select the Category"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="13dp"
        android:textSize="16sp"
        />
    <Spinner
        android:id="@+id/delete_itemCategory"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="290dp"
        android:entries="@array/Category"
        />

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="300dp"
        android:paddingTop="10dp"
        android:orientation="vertical"
        app:errorEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/delete_itemQuantity"
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:hint="Quantity"
            android:textColorHint="@android:color/white"
            android:inputType="numberDecimal"
            android:textColor="@android:color/white"
            />
    </android.support.design.widget.TextInputLayout>
    <TextView
        android:id="@+id/deleteExpDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Expiry Date"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="13dp"
        android:textSize="20sp"
        />


    <Button
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="480dp"
        android:text="delete" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select the Brand"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="13dp"
        android:textSize="16sp"
        />
    <Spinner
        android:id="@+id/delete_itemBrand"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="440dp"
        android:entries="@array/Brand"
        />
</RelativeLayout>
